<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/fb_share_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="fackbook分享"
                android:visibility="gone"
                android:textColor="#000000" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/logon_button_txt"
                android:textColor="#000000" />

            <Button
                android:id="@+id/pay_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/pay_button_txt"
                android:textColor="#000000" />

            <Button
                android:id="@+id/up_role_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/up_role_button_txt"
                android:textColor="#000000" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/logoff_button_txt"
                android:textColor="#000000" />

            <Button
                android:id="@+id/setting_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/setting_button_txt"
                android:textColor="#000000" />

            <Button
                android:id="@+id/exit_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/exit_button_txt"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/user_info_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/hello_world"
                android:textColor="#000000"
                tools:context=".MainActivity" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>