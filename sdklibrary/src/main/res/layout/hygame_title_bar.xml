<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hygame_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hy_dialog_title_color_blue"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/u9pay_pay_back_btn"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_centerVertical="true" 
        android:src="@drawable/hy_pay_back_btn_bg"/>

    <TextView
        android:id="@+id/hygame_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:textSize="19sp"
        android:textColor="@color/hy_text_color_white"
        android:text="支付"/>

</RelativeLayout>